      "cell_type": "code",
      "source": [
        "import cv2, os, time\n",
        "import pandas as pd\n",
        "import numpy as np\n",
        "from collections import OrderedDict, deque\n",
        "\n",
        "OUTPUT_VIDEO = \"output_tracked.mp4\"\n",
        "OUTPUT_CSV = \"tracks.csv\"\n",
        "SAMPLE_FRAMES_DIR = \"sample_frames\"\n",
        "os.makedirs(SAMPLE_FRAMES_DIR, exist_ok=True)\n",
        "\n",
        "# ------- Centroid Tracker --------\n",
        "class CentroidTracker:\n",
        "    def __init__(self, max_disappeared=30, max_distance=60):\n",
        "        self.next_object_id = 0\n",
        "        self.objects = OrderedDict()\n",
        "        self.disappeared = OrderedDict()\n",
        "        self.max_disappeared = max_disappeared\n",
        "        self.max_distance = max_distance\n",
        "        self.traces = {}\n",
        "\n",
        "    def register(self, centroid):\n",
        "        self.objects[self.next_object_id] = centroid\n",
        "        self.disappeared[self.next_object_id] = 0\n",
        "        self.traces[self.next_object_id] = deque([centroid], maxlen=5000)\n",
        "        self.next_object_id += 1\n",
        "\n",
        "    def deregister(self, object_id):\n",
        "        if object_id in self.objects:\n",
        "            del self.objects[object_id]\n",
        "            del self.disappeared[object_id]\n",
        "\n",
        "    def update(self, rects):\n",
        "        if len(rects) == 0:\n",
        "            for oid in list(self.disappeared.keys()):\n",
        "                self.disappeared[oid] += 1\n",
        "                if self.disappeared[oid] > self.max_disappeared:\n",
        "                    self.deregister(oid)\n",
        "            return self.objects\n",
        "\n",
        "        input_centroids = np.array(\n",
        "            [(int((x1+x2)/2), int((y1+y2)/2)) for (x1,y1,x2,y2) in rects]\n",
        "        )\n",
        "\n",
        "        if len(self.objects) == 0:\n",
        "            for c in input_centroids:\n",
        "                self.register(tuple(c))\n",
        "        else:\n",
        "            object_ids = list(self.objects.keys())\n",
        "            object_centroids = list(self.objects.values())\n",
        "            D = np.linalg.norm(np.array(object_centroids)[:,None] - input_centroids[None,:], axis=2)\n",
        "\n",
        "            rows = D.min(axis=1).argsort()\n",
        "            cols = D.argmin(axis=1)[rows]\n",
        "\n",
        "            used_rows, used_cols = set(), set()\n",
        "\n",
        "            for (row, col) in zip(rows, cols):\n",
        "                if row in used_rows or col in used_cols: continue\n",
        "                if D[row,col] > self.max_distance: continue\n",
        "\n",
        "                oid = object_ids[row]\n",
        "                self.objects[oid] = tuple(input_centroids[col])\n",
        "                self.disappeared[oid] = 0\n",
        "                self.traces[oid].append(tuple(input_centroids[col]))\n",
        "\n",
        "                used_rows.add(row)\n",
        "                used_cols.add(col)\n",
        "\n",
        "            unused_cols = set(range(D.shape[1])) - used_cols\n",
        "            for col in unused_cols:\n",
        "                self.register(tuple(input_centroids[col]))\n",
        "\n",
        "            unused_rows = set(range(D.shape[0])) - used_rows\n",
        "            for row in unused_rows:\n",
        "                oid = object_ids[row]\n",
        "                self.disappeared[oid] += 1\n",
        "                if self.disappeared[oid] > self.max_disappeared:\n",
        "                    self.deregister(oid)\n",
        "\n",
        "        return self.objects\n",
        "\n",
        "# -------- Video Processing --------\n",
        "cap = cv2.VideoCapture(VIDEO_PATH)\n",
        "fps = cap.get(cv2.CAP_PROP_FPS) or 25.0\n",
        "W = int(cap.get(cv2.CAP_PROP_FRAME_WIDTH))\n",
        "H = int(cap.get(cv2.CAP_PROP_FRAME_HEIGHT))\n",
        "\n",
        "fourcc = cv2.VideoWriter_fourcc(*\"mp4v\")\n",
        "out = cv2.VideoWriter(OUTPUT_VIDEO, fourcc, fps, (W, H))\n",
        "\n",
        "fgbg = cv2.createBackgroundSubtractorMOG2(history=500, varThreshold=50, detectShadows=True)\n",
        "tracker = CentroidTracker()\n",
        "\n",
        "records = []\n",
        "frame_no = 0\n",
        "\n",
        "while True:\n",
        "    ret, frame = cap.read()\n",
        "    if not ret:\n",
        "        break\n",
        "    frame_no += 1\n",
        "\n",
        "    fgmask = fgbg.apply(frame)\n",
        "    _, th = cv2.threshold(fgmask, 200, 255, cv2.THRESH_BINARY)\n",
        "    contours, _ = cv2.findContours(th, cv2.RETR_EXTERNAL, cv2.CHAIN_APPROX_SIMPLE)\n",
        "\n",
        "    rects = []\n",
        "    for cnt in contours:\n",
        "        if cv2.contourArea(cnt) < 600:\n",
        "            continue\n",
        "        x, y, w, h = cv2.boundingRect(cnt)\n",
        "        rects.append((x, y, x+w, y+h))\n",
        "        cv2.rectangle(frame, (x,y), (x+w,y+h), (0,255,0), 2)\n",
        "\n",
        "    objects = tracker.update(rects)\n",
        "\n",
        "    for oid, (cx, cy) in objects.items():\n",
        "        cv2.circle(frame, (cx,cy), 4, (0,0,255), -1)\n",
        "        cv2.putText(frame, f\"ID {oid}\", (cx,cy-10), cv2.FONT_HERSHEY_SIMPLEX, 0.5, (0,0,255), 2)\n",
        "        records.append((frame_no, oid, cx, cy))\n",
        "\n",
        "    if frame_no in (1, int(fps*2), int(fps*5), int(fps*10)):\n",
        "        cv2.imwrite(f\"{SAMPLE_FRAMES_DIR}/frame_{frame_no}.jpg\", frame)\n",
        "\n",
        "    out.write(frame)\n",
        "\n",
        "cap.release()\n",
        "out.release()\n",
        "\n",
        "df = pd.DataFrame(records, columns=[\"frame\",\"object_id\",\"cx\",\"cy\"])\n",
        "df.to_csv(OUTPUT_CSV, index=False)\n",
        "\n",
        "print(\"Processing done!\")\n",
        "print(\"Output video:\", OUTPUT_VIDEO)\n",
        "print(\"Tracking CSV:\", OUTPUT_CSV)\n",
        "print(\"Sample frames saved in:\", SAMPLE_FRAMES_DIR)\n"
      ],
      "metadata": {
        "colab": {
          "base_uri": "https://localhost:8080/"
